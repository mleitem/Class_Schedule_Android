<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.meganleitem_c196pa">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_launcher_grad_cap_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_grad_cap_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MeganLeitemC196PA"
        tools:targetApi="31">
        <receiver
            android:name=".termscheduler.UI.MyReceiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity
            android:name=".termscheduler.UI.ViewAssessment"
            android:exported="true"
            android:label="View Assessment"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".termscheduler.UI.ViewCourse"
            android:exported="true"
            android:label="View Course"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".termscheduler.UI.CourseList"
            android:exported="true"
            android:label="My Courses" />
        <activity
            android:name=".termscheduler.UI.AssessmentList"
            android:exported="false"
            android:label="My Assessments" />
        <activity
            android:name=".termscheduler.UI.ViewTerm"
            android:exported="false"
            android:label="View Term"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".termscheduler.UI.TermList"
            android:exported="false"
            android:label="My Terms" />
        <activity
            android:name=".termscheduler.UI.MainActivity"
            android:exported="true"
            android:label="Class Schedule Creator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>