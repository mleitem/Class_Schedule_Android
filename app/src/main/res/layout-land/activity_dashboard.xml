<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="720dp"
        android:layout_height="384dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="14dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="20dp">

            <Button
                android:id="@+id/button10"
                android:layout_width="338dp"
                android:layout_height="73dp"
                android:onClick="enterTermList"
                android:text="@string/term_list" />

            <Button
                android:id="@+id/button11"
                android:layout_width="338dp"
                android:layout_height="73dp"
                android:onClick="enterCourseList"
                android:text="@string/course_list" />

            <Button
                android:id="@+id/button12"
                android:layout_width="338dp"
                android:layout_height="73dp"
                android:onClick="enterAssessmentList"
                android:text="@string/assessment_list" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button13"
                android:layout_width="338dp"
                android:layout_height="73dp"
                android:onClick="enterTermReports"
                android:text="@string/term_reports" />

            <Button
                android:id="@+id/button14"
                android:layout_width="338dp"
                android:layout_height="73dp"
                android:onClick="enterCourseReports"
                android:text="@string/course_reports" />

            <Button
                android:id="@+id/button15"
                android:layout_width="338dp"
                android:layout_height="73dp"
                android:text="@string/assessment_reports" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>